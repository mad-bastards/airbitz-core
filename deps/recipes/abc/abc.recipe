depends="curl jansson libbitcoin libcsv libgit2 libqrencode openssl protobuf zeromq"
inherit lib

build() {
    cd $base_dir/..
    export WORK_DIR=$work_dir

    case $target in
    android-*)  output=libabc.so ;;
    *)          output=libabc.a ;;
    esac

    export CFLAGS="$CFLAGS -O2"
    export CXXFLAGS="$CXXFLAGS -O2"

    if [ $target = native ]; then
        export PROTOC=$install_dir/bin/protoc
    fi

    # Build:
    make $output V=1

    # Native builds include unit tests and utilities:
    if [ $target = native ]; then
        make all V=1
    fi

    # Install:
    mkdir -p $install_dir/lib
    cp $work_dir/$output $install_dir/lib
    cp src/ABC.h $install_dir/include
}

clean() {
    cd $base_dir/..
    export WORK_DIR=$work_dir
    make clean
}

tar() {
    cd $base_dir/..
    export WORK_DIR=$work_dir/native
    make tar V=1
}
task tar build-native

lib="lib/libabc.a"
include="include/ABC.h"
